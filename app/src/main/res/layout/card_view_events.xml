<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:id="@+id/cvEvents"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/tvNameEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nombre del evento:" />

        <TextView
            android:id="@+id/tvNameEvent"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/tvNameEvents"
            android:layout_margin="6dp" />

        <TextView
            android:id="@+id/tvStartEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameEvent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:text="Hora inicio" />

        <TextView
            android:id="@+id/tvStartEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStartEvents"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:id="@+id/tvZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tvZones"
            android:text="Zona:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/tvZone"
            android:layout_margin="6dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>