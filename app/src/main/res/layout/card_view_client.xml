<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:id="@+id/cvClient"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/tvNameClients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nombre del dispositivo:" />

        <TextView
            android:id="@+id/tvNameClient"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/tvNameClients"
            android:layout_margin="6dp" />

        <TextView
            android:id="@+id/tvTimeConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameClient"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:text="Estancia en minutos" />

        <TextView
            android:id="@+id/tvTimeConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTimeConnected"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>